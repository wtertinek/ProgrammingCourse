Dim num1, num2

num1 = CDbl(InputBox("Please enter the first number:"))
num2 = CDbl(InputBox("Please enter the second number:"))

MsgBox num1 & " + " & num2 & " = " & num1 + num2
MsgBox num1 & " - " & num2 & " = " & num1 - num2
MsgBox num1 & " * " & num2 & " = " & num1 * num2
MsgBox num1 & " / " & num2 & " = " & num1 / num2